<% layout("/layout/boilerPlate.ejs") %>

<body>
    <h2 class="offset-2 mb-3">Add New Food Items</h2>
    <form method="post" action="/quickbyte/new" class="needs-validation" enctype="multipart/form-data" novalidate>

        <div class="row">
            <div class="col-7 offset-2">
                <div class=" mb-3">
                    <label for="title "  class="form-label"><p>Food Titile </p></label>
                    <input placeholder="Enter Catchy Title" class="form-control" name="foodListing[title]" type="text" required>
                    <div class="valid-feedback">Looks good!</div>
                    <div class="invalid-feedback">Please choose a Title. </div>
                </div>
                
                <div class=" mb-3">
                    <label for="about "  class="form-label"><p>About Food</p></label>
                    <textarea placeholder="Enter Descritpions" class="form-control" name="foodListing[about]" type="text" required></textarea>
                    <div class="valid-feedback">Looks good!</div>
                    <div class="invalid-feedback">Please Fill The Descritpions. </div>
                </div>
                

                <div class=" mb-3">
                    <label for="image "  class="form-label"><p>Upload food Image</p></label>
                    <input placeholder="Upload Image " class="form-control" name="foodListing[image]" type="file" required>
                </div>
                
                <div class="row">
                    <div class="col-3 col-md-4">
                            <div class="mb-3">
                                <label for="price "  class="form-label"><p>Enter Price</p></label>
                                <div class="input-group mb-3">
                                    <span class="input-group-text" id="basic-addon1" >&#8377;</span>
                                    <input placeholder="Enter Price" class="form-control" name="foodListing[price]" type="number" required>
                                    <div class="valid-feedback">Looks good!</div>
                                    <div class="invalid-feedback">Please Enter a valid Price. </div>
                                </div>
                            </div>
                           
                    </div>    
                     
                    <div class="col-4 col-md-8">
                        <label  class="form-label mb-3"><p> Food Catgory </p></label>
                        <select class="form-select mb-3" name="foodListing[category]" required>
                            <option value="snacks" name="foodListing[snacks]"> snacks</option>
                            <option value="ice cream" name="foodListing[ice cream]"> ice cream</option>
                            <option value="juice/coldDrinks" name="foodListing[juice/coldDrinks]"> juice/coldDrinks</option>
                            <div class="valid-feedback">Looks good!</div>
                            <div class="invalid-feedback">Please choose a options. </div>
                        </select><br>
                    </div>    
                        
                    
                </div>
                
               
                
                <button class="btn btn-primary">Add Item</button>
            </div>    
        </div>    
    </form>
</body>
